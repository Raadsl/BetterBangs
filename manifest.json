{
  "manifest_version": 3,
  "name": "BetterBangs",
  "version": "1.0",
  "description": "Adds *ALL* DDG !Bangs to a lot of search engines including Startpage, Bing and Google.",
  "permissions": ["webRequest", "tabs", "storage"],
  "host_permissions": [
    "https://*.startpage.com/*",
    "https://*.google.com/*",
    "https://*.google.nl/*",
    "https://*.bing.com/*",
    "https://*.yahoo.com/*",
    "https://*.ecosia.org/*",
    "https://*.brave.com/*",
    "https://*.swisscows.com/*",
    "https://*.you.com/*",
    "https://*.qwant.com/*",
    "https://*.yandex.com/*",
    "https://*.mojeek.com/*",
    "https://*.google.co.uk/*",
    "https://*.google.ca/*",
    "https://*.google.com.au/*",
    "https://*.google.de/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "32": "icons/icon32.png"
    },
    "default_title": "Open BetterBangs",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png",
    "500": "icons/icon500.png"
  }
}